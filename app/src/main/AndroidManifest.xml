<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hanbat.isl.baeminsu.mobileproject">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".Set.ApplicationContext"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.LoginActivity"
            android:theme="@style/NoAppTheme" />
        <activity
            android:name=".Activity.MainActivity" />
        <activity
            android:name=".Activity.JoinActivity"
            android:theme="@style/NoAppTheme" />
        <activity android:name=".Activity.WriteBuyActivity" />
        <activity android:name=".Activity.WriteSellActivity" />
        <activity android:name=".Activity.SellDetailActivity" />
        <activity android:name=".Activity.BuyDetailActivity" />
        <activity
            android:name=".Activity.SplashActivity"
            android:theme="@style/NoAppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.SellSearchResultActivity" />
        <activity android:name=".Activity.BuySearchResultActivity" />
        <activity
            android:name=".Activity.DetailImage"
            android:theme="@style/NoActionDial" />
        <activity android:name=".Activity.SellMyResultActivity"></activity>
        <activity android:name=".Activity.BuyMyResultActivity"></activity>
    </application>

</manifest>